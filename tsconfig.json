{
    "compilerOptions": {
      "target": "es2017",
      "lib": [
        "es2017",
        "esnext.asynciterable"
      ],
      "typeRoots": [
        "./node_modules/@types",
        "./src/types"
      ],    
        "noImplicitAny": true,   
      "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },       
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "module": "commonjs",
      "pretty": true,
      "sourceMap": true,
      "outDir": "./build",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "tests"
    ]
  }